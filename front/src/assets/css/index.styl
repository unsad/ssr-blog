@import './variable.styl'

@font-face 
  font-family: 'special-for-me'
  src: url('../fonts/ljh.ttf') format('truetype')
  font-weight: normal
  font-style: normal

@font-face 
  font-family: 'jackey_handwriteregular';
  src: url('../fonts/jackeyhandwrite-webfont.woff2') format('woff2'),
       url('../fonts/jackeyhandwrite-webfont.woff') format('woff'),
       url('../fonts/jackeyhandwrite-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;


*,
*::before,
*::after 
  margin: 0;
  padding: 0;
  box-sizing: border-box;
html 
  font-size: $font-size-small
  font-family: PingFang SC
  background: #1e1e1e
ul
  list-style-type: none 
a
  text-decoration: none
::-webkit-scrollbar
  background: transparent
  width: 0

@media only screen and (min-width : 769px)
  :global(.no-pc)
    display: none!important

@media only screen and (max-width : 768px)
  :global(.no-phone)
    display: none!important